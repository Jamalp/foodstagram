
<div>
  <h1 class="page-header">You're checking out <%= params[:place].capitalize %> <small>in <%= params[:location].capitalize %></small></h1>
<ul class="thumbnails">
<% @photos.each do |photo| %>
  <li class="span4">
    <div class="thumbnail">
      <%= link_to (image_tag photo.images.standard_resolution.url), photo.images.standard_resolution.url if photo.images %>
      <%= link_to (video_tag photo.videos.standard_resolution.url), photo.videos.standard_resolution.url  if photo.videos %>
      <%= photo.caption.text if photo.caption.text %>
    </div>
  </li>
<% end %>
</ul>
</div>

