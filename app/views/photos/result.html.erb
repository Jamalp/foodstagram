  <%= render '/layouts/result_layout'%>
  <%= render '/layouts/header' %>
  <div>
  <h1 class="page-header">You're checking out <%= params[:place].titleize %><br>
    <small>
      In <%= params[:location].titleize %>
    </small>

      <%= button_to "Bookmark", save_place_path(name: params[:place], location: params[:location]), class: "buttonless" do %>
      <% end %>

  </h1>
  <ul class="thumbnails">
  <% @photos.each do |photo| %>
    <li class="span4">
      <div class="thumbnail">
        <% if photo.videos %>
          <%= link_to (image_tag photo.images.standard_resolution.url), photo.videos.standard_resolution.url if photo.videos %>
        <% else %>
          <%= link_to (image_tag photo.images.standard_resolution.url), photo.images.standard_resolution.url if photo.images %>
        <% end %>
        <span class="caption">
         <p class="hideOverflow"><%= photo.caption.text if photo.caption %></p>
        </span>
      <% end %>
      </div>
    </li>
  </ul>
</div>

